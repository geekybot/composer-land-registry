<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Landria</title>
    <!-- Favicon-->
    <link rel="icon" href="../../img/logo.png" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">

    <!-- Bootstrap Core Css -->
    <link href="../../css/bootstrap.min.css" rel="stylesheet">

    <!-- Waves Effect Css -->
    <link href="../../css/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="../../css/animate.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="../../css/style_admin.css" rel="stylesheet">

    <!-- Sweet alert 2 Plugin Css-->
    <link href="../../css/sweetalert2.min.css" rel="stylesheet">

    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="../../css/all-themes.css" rel="stylesheet" />
</head>

<body class="theme-green">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Top Bar -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="javascript:void(0);" class="bars"></a>
                <a class="navbar-brand anton" href="#">Landria</a>
            </div>
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                </ul>
            </div>
        </div>
    </nav>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
            <div class="user-info">
                <div class="image">
                    <img src="../../img/user.png" width="48" height="48" alt="User" />
                </div>
                <div class="info-container">
                    <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">John Doe</div>
                    <div class="email">john.doe@example.com</div>
                    <div class="btn-group user-helper-dropdown">
                        <i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">keyboard_arrow_down</i>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="javascript:void(0);"><i class="material-icons">person</i>Profile</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="javascript:void(0);"><i class="material-icons">input</i>Sign Out</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    <li class="header">MAIN NAVIGATION</li>
                    <li>
                        <a onClick="renderEjs('users/dashboard');">
                            <i class="material-icons">view_list</i>
                            <span>View Your Property</span>
                        </a>
                    </li>
                    <li class="active">
                        <a onClick="renderEjs('users/property/register');">
                            <i class="material-icons">border_color</i>
                            <span>Register a Property</span>
                        </a>
                    </li>
                    <li>
                        <a onClick="renderEjs('users/property/sell');">
                            <i class="material-icons">attach_money</i>
                            <span>Sell a Property</span>
                        </a>
                    </li>
                </ul>
            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <div class="legal">
                <div class="copyright">
                    &copy; 2018 - 2019 <a href="javascript:void(0);">Landria</a>.
                </div>
                <div class="version">
                    <b>Version: </b> 1.0.5
                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="block-header">
                <form method="POST" action="/users/property/register/new" enctype="multipart/form-data">
                    <div class="row clearfix">
                        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                            <div class="card">
                                <div class="header">
                                    <h2>REGISTER YOUR PROPERTY</h2>
                                </div>
                                <div class="body">
                                    <!-- Select Property Type -->
                                    <!-- <div class="row clearfix">
                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                            <label for="property_type">Select Property Type<span style="color:red;"> *</span></label>
                                            <select class="custom-select" id="property_type" name="property_type">
                                                <option selected>Open this select menu</option>
                                                <option value="A">Agricultural</option>
                                                <option value="R">Residential</option>
                                                <option value="NA">Non Agricultural</option>
                                            </select>
                                        </div>
                                    </div> -->
                                    <!-- Enter plot no, bldg no, bldg name -->
                                    <div class="row clearfix">
                                        <div class="col-lg-4 col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <label for="plot_no">Plot Number<span style="color:red;"> *</span></label>
                                                    <input type="text" class="form-control" id="plot_no" name="plot_no"
                                                        placeholder="" required pattern="[0-9]+" minlength="1">
                                                </div>
                                            </div>
                                        </div>
                                        <!-- <div class="col-lg-4 col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <label for="plot_no">Building Number</label>
                                                    <input type="text" class="form-control" id="bldg_no" name="bldg_no"
                                                        placeholder="">
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-4 col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <label for="plot_no">Building Name</label>
                                                    <input type="text" class="form-control" id="bldg_name" name="bldg_name"
                                                        placeholder="">
                                                </div>
                                            </div>
                                        </div> -->
                                    </div>
                                    <!-- Enter street name and locality-->
                                    <div class="row clearfix">
                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <label for="street">Street Name<span style="color:red;"> *</span></label>
                                                    <input type="text" id="street" name="street" class="form-control"
                                                        required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <label for="locality">Locality<span style="color:red;"> *</span></label>
                                                    <input type="text" id="locality" name="locality" class="form-control"
                                                        required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Enter city and state-->
                                    <div class="row clearfix">
                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <label for="city">City Name<span style="color:red;"> *</span></label>
                                                    <input type="text" id="city" name="city" class="form-control"
                                                        required>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-lg-6 col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <div class="form-line">
                                                    <label for="state">State<span style="color:red;"> *</span></label>
                                                    <input type="text" id="state" name="state" class="form-control"
                                                        required>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- Upload title deed -->
                                    <div class="form-group ">
                                        <div class="form-line">
                                            <input type="file" class="custom-file-input" id="deed" name="deed" required accept="application/pdf, image/*">
                                            <label class="custom-file-label" for="deed">Upload Title Deed<span style="color:red;"> *</span></label>
                                        </div>
                                    </div>
                                    <!-- Upload images -->
                                    <div class="form-group ">
                                        <div class="form-line">
                                            <input type="file" class="custom-file-input" id="image" name="image" required accept="image/*">
                                            <label class="custom-file-label" for="images">Upload Image<span style="color:red;"> *</span></label>
                                        </div>
                                    </div>

                                    <button type="submit" class="btn btn-primary waves-effect">Submit</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
    </section>

    <% if(errors) { %>
        <script type="text/javascript">
            var errors = "<%= errors %>";
        </script>
    <%  } else if(success) { %>
            <script type="text/javascript">
                var success = "<%= success %>"
                if(success == "true")
                    var id = "<%= id %>";
            </script>
    <%  } %>


    <!-- Jquery Core Js -->
    <script src="../../js/jquery.min.js"></script>

    <!-- Jquery redirect plugin Js -->
    <script src="../../js/jquery.redirect.js"></script>

    <!-- Bootstrap Core Js -->
    <script src="../../js/bootstrap.js"></script>

    <!-- Slimscroll Plugin Js -->
    <script src="../../js/jquery.slimscroll.js"></script>

    <!-- Sweet alert 2 Plugin Js-->
    <script src="../../js/sweetalert2.min.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="../../js/waves.js"></script>

    <!-- Custom Js -->
    <script src="../../js/admin.js"></script>
    <script src="../../js/index.js"></script>

    <!-- Demo Js -->
    <script src="../../js/demo.js"></script>

    <script type="text/javascript">
        if(typeof errors != 'undefined') {
            if(errors != "")
                Swal.fire({
                        type: 'error',
                        title: 'Errors',
                        text: errors
                });
        }
        console.log(success);
        if(typeof success != 'undefined') {
            
            if(success == "true")
                Swal.fire({
                    type: 'success',
                    title: 'Success!',
                    text: 'Land has been added successfully! Land id is ' + id
                });
        }
    </script>
</body>

</html>